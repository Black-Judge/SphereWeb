<div class="news_wrapper show_new">
	<div class="news_img"><span class="news_date"><span>{day}.{month}</span></span>
		[img]<img src="{img}" alt="" class="nimg" />[/img]
	</div>
	<div class="news_content_wrp">
		<div class="news_title">
			{ntitle}
		</div>
		<div class="news_content">
			{news}
		</div>
		<div class="news_info">
			<span class="news_author"><img src="{template}/images/author.png" height="18" width="26">{author} </span>
			{full-link}Читать подробнее...{/full-link}
			<div class="clear"></div>
		</div>
	</div>
</div>
